<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/login_image_backgound">


    <ImageView
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:src="@mipmap/mlogo"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"

            android:gravity="center"
            android:background="@drawable/login_shape_inputphone"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/login_image_uname"/>

            <EditText
                android:id="@+id/register_edi_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:hint="请输入真实姓名"
                android:background="@null"
                android:textColorHint="@color/c_cccccc"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c_cccccc"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"

            android:gravity="center"
            android:background="@drawable/login_shape_inputphone"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/login_image_uname"/>

            <EditText
                android:id="@+id/register_edi_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:hint="请输入您的手机号"
                android:background="@null"
                android:textColorHint="@color/c_cccccc"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c_cccccc"
                android:inputType="number"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/login_shape_inputphone"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/register_image_code"/>

            <EditText
                android:id="@+id/register_edi_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:hint="请输入验证码"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="@color/c_cccccc"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c_cccccc"
                android:inputType="number"/>

            <TextView
                android:id="@+id/register_text_getcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:background="@drawable/login_btn"
                android:textColor="@color/c_ffffff"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:background="@drawable/login_shape_inputphone"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/login_image_password"/>

            <EditText
                android:id="@+id/register_edi_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:hint="8-20位字母加数字组合密码"
                android:background="@null"
                android:textColorHint="@color/c_cccccc"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c_cccccc"
                android:inputType="number"/>

        </LinearLayout>



        <Button
            android:id="@+id/register_botton_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/login_btn"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/c_ffffff"
            android:text="注  册"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/register_image_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/register_image_nochoice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/c_ffffff"
                android:text="注册代表您接受"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/useragreement"
                android:text="《使用条款及隐私协议》"
                android:textSize="@dimen/sp_13"
                android:textColor="#13c0f2"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
