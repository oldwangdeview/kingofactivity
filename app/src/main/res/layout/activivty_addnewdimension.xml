<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_E6E6E6">
    <include layout="@layout/layout_title"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--选择任务-->
            <LinearLayout
                android:id="@+id/weidu_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="维度类型"/>


                <TextView
                    android:id="@+id/weidu_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="请选择"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/weidu_taskname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="维度任务名"/>


                <TextView
                    android:id="@+id/wedui_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="请选择"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/weidu_allcomqty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="总目标量"/>


                <EditText
                    android:id="@+id/weidu_allcomqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:text=""
                    android:hint="请输入"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/weidu_comqty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="单位目标量"/>


                <EditText
                    android:id="@+id/weidu_comqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:text=""
                    android:hint="请输入"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weidu_danwei_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="奖惩单位"/>


                <TextView
                    android:id="@+id/weidu_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="请选择"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/weidu_jianli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="单位目标量完成奖励值"/>


                <EditText
                    android:id="@+id/wedu_jianli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:text=""
                    android:hint="请输入"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/weidu_cf_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="单位目标量未完成惩罚值"/>


                <EditText
                    android:id="@+id/weidu_cf_edi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:text=""
                    android:hint="请输入"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="间隔时间(小时)"/>


                <EditText
                    android:id="@+id/weidu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_999999"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:text=""
                    android:hint="请输入"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="备注"
                    android:textColor="@color/c_000000"/>


                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_50"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请输入"
                    android:layout_marginTop="@dimen/dp_10"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <Button
        android:id="@+id/ojbk_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_15"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/sp_16"
        android:text="保存"
        android:background="#E1C66B"/>


</LinearLayout>
