<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f5f5"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>


    <!--PK-->
    <LinearLayout
        android:id="@+id/is_pk_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="PK"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">


        <Switch
            android:id="@+id/switch_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
        </LinearLayout>

    </LinearLayout>
    <!--PK金上限-->
    <LinearLayout
        android:id="@+id/pk_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="PK金上限"
            />

        <EditText
            android:id="@+id/pk_maxmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/c_999999"
            android:text=""
            android:hint="请输入"
            android:textColorHint="@color/c_999999"/>

    </LinearLayout>
    <!--是否交保证金-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="是否交保证金"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">


            <Switch
                android:id="@+id/switch_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                />
        </LinearLayout>

    </LinearLayout>
    <!--保证金-->
    <LinearLayout
        android:id="@+id/bzj_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="保证金"
            />

        <EditText
            android:id="@+id/bzj_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            android:text=""
            android:background="@null"
            android:inputType="number"
            android:hint="请输入"
            android:textColorHint="@color/c_999999"/>

    </LinearLayout>

    <!--下级类型-->
    <LinearLayout
        android:id="@+id/choice_lower_lever_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_29"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="下级类型"
            />

        <TextView
            android:id="@+id/choice_nexlevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            android:text="请选择"/>

    </LinearLayout>
    <!--选择下级-->
    <LinearLayout

        android:id="@+id/choice_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="达标规则"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            android:text="请选择"/>
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>

    <!--选择下级-->
    <LinearLayout

        android:id="@+id/choice_weidu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_000000"
            android:text="维度列表"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_999999"
            android:text="请选择"/>
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="@dimen/dp_16">


        <Button
            android:id="@+id/ojbk_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="确认"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/c_ffffff"
            android:background="#ffcccccc"/>

    </LinearLayout>
</LinearLayout>
