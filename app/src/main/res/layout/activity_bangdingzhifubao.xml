<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/c_f5f5f5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:orientation="horizontal">
        
        
        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/logo"/>

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/qiehuan"/>
        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/zhidubao_image"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="@color/c_ffffff">

        <EditText
            android:id="@+id/editext_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColorHint="@color/c_999999"
            android:textColor="@color/c_000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15"
        android:background="@color/c_ffffff">

        <EditText
            android:id="@+id/editext_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            android:hint="请输入支付宝登录账号"
            android:textColorHint="@color/c_999999"
            android:textColor="@color/c_000000"/>

    </LinearLayout>


    <Button
        android:id="@+id/ojbk_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#E1C66B"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="立即绑定"
        android:textColor="@color/c_ffffff"/>

</LinearLayout>
