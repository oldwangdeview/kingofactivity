<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff"
    >

    <include layout="@layout/layout_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:background="@color/c_f5f5f5"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/choiceuser_findbackshape"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="wrap_content"
            android:src="@mipmap/sousuo"/>
        <EditText
            android:id="@+id/find_iput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_ff333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:cursorVisible="false"
            android:hint="搜索"
            android:textColorHint="@color/c_cccccc"/>
    </LinearLayout>

    <ListView
        android:id="@+id/choice_user_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="1"
        ></ListView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:id="@+id/myscroolow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/addview_layout">

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/ojbk_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#E1C66B"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/c_ffffff"

        android:textSize="@dimen/sp_24"
        android:layout_margin="@dimen/dp_15"/>

</LinearLayout>
