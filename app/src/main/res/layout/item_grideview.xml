<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"

        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/selete_image"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/unselected"/>

        <ImageView
            android:id="@+id/heand_image"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/mrtx"/>

        <TextView
            android:id="@+id/titlename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            android:textColor="#050505"
            android:textSize="@dimen/sp_13"
            />

        <LinearLayout
            android:id="@+id/shouwbottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_jiantou"
                android:layout_width="@dimen/dp_17"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiantou2"/>
        </LinearLayout>


        <TextView
            android:id="@+id/image_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_23"
            android:textColor="#EC0D0D"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/c_f5f5f5"/>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_50"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone"
        android:paddingBottom="@dimen/dp_30"
        android:background="@color/c_ffffff">

        
        <EditText
            android:id="@+id/editext_1"
            android:layout_width="@dimen/dp_200"
            android:textSize="@dimen/sp_11"
            android:textColorHint="#aaaaaa"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/input_edi_gride"/>

        <EditText
            android:id="@+id/editext_2"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_11"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="#aaaaaa"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/input_edi_gride"/>

        <EditText
            android:id="@+id/editext_3"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_11"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="#aaaaaa"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/input_edi_gride"/>

        <EditText
            android:id="@+id/editext_4"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_11"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="#aaaaaa"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/input_edi_gride"/>

        <EditText
            android:id="@+id/editext_5"
            android:layout_width="@dimen/dp_200"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_11"
            android:textColorHint="#aaaaaa"
            android:background="@drawable/input_edi_gride"/>



    </LinearLayout>


</LinearLayout>
