<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f5f5f5">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_30"
                android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="任务名称"/>
        <TextView
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3月销售计划"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="时间"/>
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019年3月20号——2019年4月20号"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="项目描述"/>
        <TextView
            android:id="@+id/task_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3月份销售量需要达到xxxxxx"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="发起来人"/>
        <TextView
            android:id="@+id/fb_usernickname_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="xxxx"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="接受状态"/>
        <TextView
            android:id="@+id/gettask_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未接受"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pingding_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="PK评定人"/>
        <TextView
            android:id="@+id/pk_pingding_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="xxxx"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/pingding_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="PK评定时间"/>
        <TextView
            android:id="@+id/pk_pingding_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019年3月20号"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/data_queren_user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="结果确认人"/>
        <TextView
            android:id="@+id/jieguo_userdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="xxxx"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/queren_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="确认时间"/>
        <TextView
            android:id="@+id/queren_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019年3月20号"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_000000"
            android:text="pk金"/>
        <TextView
            android:id="@+id/pk_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="800元"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_999999"/>


    </LinearLayout>

                <LinearLayout
                    android:id="@+id/faqizhif_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:background="@color/c_ffffff">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/c_000000"
                        android:text="发起人支付状态"/>
                    <TextView
                        android:id="@+id/faqi_money_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="800元"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/c_999999"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/jiesour_zhifu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:background="@color/c_ffffff">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/c_000000"
                        android:text="接受人支付状态"/>
                    <TextView
                        android:id="@+id/jiesou_money_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="800元"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/c_999999"/>


                </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_68">


        <Button
            android:id="@+id/challengetaskdetail_button_updatemoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/challengettask_shape_button"
            android:text="修改PK金"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_gravity="left"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_ffffff"/>

        <Button
            android:id="@+id/challengetaskdetail_button_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/challengettask_shape_button"
            android:text="支   付"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:paddingRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_ffffff"/>


    </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <ImageView
            android:id="@+id/image_type"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/jinxingz"/>
    </RelativeLayout>
</LinearLayout>
