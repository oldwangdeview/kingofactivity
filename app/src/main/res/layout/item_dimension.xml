<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c_E6E6E6">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_14"
        android:background="@color/c_ffffff"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="#FFCC00"
                android:textColor="@color/c_ffffff"
                android:text="回馈"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text="维度名称"
                android:textColor="@color/c_666666"/>

            <TextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/c_000000"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text="单位目标量"
                android:textColor="@color/c_666666"/>

            <TextView
                android:id="@+id/qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/c_000000"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text="回馈周期"
                android:textColor="@color/c_666666"/>

            <TextView
                android:id="@+id/task_zq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/c_000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/jindu_layout"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/sp_14"
                android:text="进度"
                android:textColor="@color/c_666666"/>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_30"
                android:gravity="center_vertical"

                android:layout_marginRight="@dimen/dp_10"
                android:max="100"
                android:layout_marginTop="@dimen/dp_5"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="20"
                android:progressDrawable="@drawable/layer_list_progress_drawable"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text="备注"
                android:textColor="@color/c_666666"/>

            <TextView
                android:id="@+id/text_mom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/c_000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weidu_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text="总目标量"
                android:textColor="@color/c_666666"/>

            <TextView
                android:id="@+id/weidu_typedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/c_000000"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/button_xq"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="#FFCC00"
                android:visibility="gone"
                android:textColor="@color/c_ffffff"
                android:text="详情"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_shanchu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="right">
            <Button
                android:id="@+id/button_xg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="#FFCC00"
                android:textColor="@color/c_ffffff"
                android:layout_marginRight="@dimen/dp_15"
                android:text="修改"
                android:textSize="@dimen/sp_12"/>
            <Button
                android:id="@+id/button_sc"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="#FFCC00"
                android:textColor="@color/c_ffffff"
                android:text="删除"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
