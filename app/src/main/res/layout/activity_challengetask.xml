<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/c_ffffff"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_back_activity_basepersoninfo"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/fh" />


        <TextView
            android:id="@+id/tv_title_activity_baseperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_ff383838"
            android:textSize="@dimen/sp_18"
            android:text="挑战任务"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:id="@+id/tv_small_title_layout_head"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起挑战"
            android:textColor="@color/c_ffffff"
            android:background="@drawable/challengettask_shape_button"
            android:textSize="@dimen/sp_11" />

    </RelativeLayout>


    <com.scmsw.kingofactivity.view.YRecycleview
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_height="match_parent">

    </com.scmsw.kingofactivity.view.YRecycleview>
</LinearLayout>
