<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_e5e5e5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_14"
        android:gravity="center_vertical">



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_000000"
            android:text="下级类型"/>


        <TextView
            android:id="@+id/text_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/challengettask_shape_button"
            android:textColor="@color/c_ffffff"/>

        <TextView
            android:id="@+id/text_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:background="@drawable/challengettask_shape_button"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_15"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:paddingRight="@dimen/dp_14"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="达标量"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="right"
            android:hint="200"
            android:background="@null"
            android:id="@+id/editext1"
            android:visibility="gone"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="200"
            android:gravity="right"
            android:id="@+id/text1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:paddingRight="@dimen/dp_14"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14">


        <TextView
            android:id="@+id/db_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="达标比例"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="right"
            android:hint="200"
            android:background="@null"
            android:id="@+id/editext2"
            android:visibility="gone"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="200"
            android:gravity="right"
            android:id="@+id/text2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:paddingRight="@dimen/dp_14"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="超额量"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="right"
            android:hint="200"
            android:background="@null"
            android:id="@+id/editext3"
            android:visibility="gone"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="200"
            android:gravity="right"
            android:id="@+id/text3"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:paddingRight="@dimen/dp_14"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_14">


        <TextView
            android:id="@+id/chaoe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="超额奖金"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="right"
            android:hint="200"
            android:background="@null"
            android:id="@+id/editext4"
            android:visibility="gone"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_000000"
            android:text="200"
            android:gravity="right"
            android:id="@+id/text4"/>

    </LinearLayout>



</LinearLayout>
