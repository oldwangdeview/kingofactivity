<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f5f5f5">
    <include layout="@layout/layout_title"/>

   <LinearLayout
       android:id="@+id/linlayout_1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/dp_10"
       android:background="@color/c_ffffff"
       android:padding="@dimen/dp_14">

       <ImageView
           android:layout_width="@dimen/dp_15"
           android:layout_height="@dimen/dp_15"
           android:layout_gravity="center_vertical"
           android:src="@mipmap/tixian_money"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textSize="@dimen/sp_15"
           android:layout_marginLeft="@dimen/dp_15"
           android:gravity="left"
           android:textColor="@color/c_383838"
           android:text="零钱"
           android:layout_gravity="center_vertical"/>

       <ImageView
           android:id="@+id/image1"
           android:layout_width="@dimen/dp_15"
           android:layout_height="wrap_content"
           android:src="@mipmap/unselected"/>
   </LinearLayout>


    <LinearLayout
        android:id="@+id/linlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:padding="@dimen/dp_14">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/zhifubao_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="left"
            android:textColor="@color/c_383838"
            android:text="支付宝"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/unselected"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">


        <Button
            android:id="@+id/ojbk_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/challengettask_shape_button"
            android:textSize="@dimen/sp_18"
            android:text="确定"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/c_ffffff"/>

    </LinearLayout>

</LinearLayout>
