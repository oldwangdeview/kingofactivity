<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:qinc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_52">

    <EditText
        android:id="@+id/input_editext"
        android:layout_width="@dimen/dp_141"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/dialog_updatedialog_inputshape"
        android:layout_marginBottom="@dimen/dp_42"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/c_000000"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:hint="输入金额（元）"
        android:textColorHint="@color/c_999999"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"/>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_15"
        android:gravity="right">



        <Button
            android:id="@+id/btn_right_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/challengettask_shape_button"
            android:gravity="center"
            tools:text="确认"
            android:textColor="@color/c_ffffffff"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
</LinearLayout>