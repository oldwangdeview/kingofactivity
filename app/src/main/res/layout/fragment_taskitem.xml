<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"

       >




        <LinearLayout
            android:id="@+id/task_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/mrtx"/>
                <ImageView
                    android:id="@+id/yj_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@mipmap/yajun"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/yj_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6sp"
                android:textColor="@color/c_000000"
                android:text=""
                android:layout_marginTop="@dimen/dp_2"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/task_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
               >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/mrtx"/>
                <ImageView
                    android:id="@+id/jj_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/jijun"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/jj_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6sp"
                android:textColor="@color/c_000000"
                android:text=""
                android:layout_marginTop="@dimen/dp_2"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/task_layout_1"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/mrtx"/>
                <ImageView
                    android:id="@+id/gj_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/guanjun"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/gj_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6sp"
                android:textColor="@color/c_000000"
                android:text=""
                android:layout_marginTop="@dimen/dp_2"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff">



        <TextView
            android:id="@+id/user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center_vertical"/>
        
        
        <ImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/mrtx"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/usernam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_000000"
                android:text=""/>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textColor="@color/c_ff333333"/>


        </LinearLayout>

        <TextView
            android:id="@+id/fb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_ff333333"
            android:textSize="@dimen/sp_11"
            android:text="发布数"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/user_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textSize="@dimen/sp_24"
            android:textColor="#FF9933"
            android:layout_marginLeft="@dimen/dp_10"
            android:minWidth="@dimen/dp_50"/>
        

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/c_f5f5f5"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:divider="@color/c_f5f5f5"
        android:dividerHeight="1dp"
        android:layout_weight="1"></ListView>




</LinearLayout>
