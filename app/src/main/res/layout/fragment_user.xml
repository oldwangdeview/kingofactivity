<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:background="@mipmap/user_image_back"
        android:paddingRight="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/userdata_linlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_60"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_weight="1">


            <TextView
                android:id="@+id/myfragmnet_text_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#F4F3F8"
                android:lines="1"
                android:ellipsize="end"
                android:text="testname"/>

            <TextView
                android:id="@+id/myfragment_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:text="id:dasas"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#F4F3F8"
                android:layout_marginTop="@dimen/dp_5"/>

        </LinearLayout>

        
        
        <ImageView
            android:id="@+id/heandimage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/mrtx"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_26"
        android:paddingLeft="@dimen/dp_26"
        android:paddingBottom="@dimen/dp_12"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/yue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:background="@drawable/user_fragment_toplinerlayout_back"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"
                android:text="余额（元）"
                android:textColor="@color/c_999999"/>
                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantou2"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/myfragment_text_usermoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c_000000"
                android:layout_marginTop="@dimen/dp_5"
                android:text="¥"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:gravity="left"
                android:orientation="vertical"
                android:background="@color/c_ffffff"
                android:layout_marginRight="@dimen/dp_1">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="任务金"/>

                <TextView
                    android:id="@+id/myfragment_text_taskmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_13"
                    android:text="¥"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:gravity="left"
                android:orientation="vertical"
                android:background="@color/c_ffffff"
                android:layout_marginLeft="@dimen/dp_1">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="挑战金"/>

                <TextView
                    android:id="@+id/myfragment_text_challengemoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_13"
                    android:text="¥"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:gravity="left"
                android:orientation="vertical"
                android:background="@drawable/user_fragment_shape_redioleft"
                android:layout_marginRight="@dimen/dp_1">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_000000"
                    android:text="可用金"/>

                <TextView
                    android:id="@+id/myfragment_text_kymoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_13"
                    android:text="¥"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dp_1"
                android:orientation="vertical"
                android:background="@drawable/user_fragment_shape_rideoright"
              >




            </LinearLayout>



        </LinearLayout>
        
    </LinearLayout>

    <!--支付宝-->
    <LinearLayout
        android:id="@+id/bangding_ali"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_fragment_zfb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="支付宝"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
    <!--收支账单-->
    <LinearLayout
        android:id="@+id/money_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_fragment_zd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="收支账单"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
    <!--我的排名-->
    <LinearLayout
        android:id="@+id/ranking_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:visibility="gone"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_fragment_wd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="我的排名"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
    <!--天梯榜规则-->
    <LinearLayout
        android:id="@+id/ttb_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_fragment_ttb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="天梯榜规则"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
    <!--问题与帮助-->
    <LinearLayout
        android:id="@+id/question_linearlyout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_fragment_cjwt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="常见问题"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
    <!--使用帮助-->
    <LinearLayout
        android:id="@+id/help_linlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_fragment_sybz"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="使用帮助"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>

    <!--设置-->
    <LinearLayout
        android:id="@+id/huikui_linlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:visibility="visible"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shenhe_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="任务回馈"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>

    <!--设置-->
    <LinearLayout
        android:id="@+id/shenhe_linlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shenhe_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="任务审核"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>

    <!--设置-->
    <LinearLayout
        android:id="@+id/seting_linlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/c_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sseting_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="设置"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou2"/>

    </LinearLayout>
</LinearLayout>
